{
  "items": [
    {
      "xtype": "panel",
      "title": "Features",
      "collapsed": false,
      "items": [
        {
          "xtype": "checkbox",
          "name": "allowWishlist",
          "fieldLabel": "Allow Wishlist"
        }
      ]
    },
    {
      "xtype": "panel",
      "title": "Layout",
      "collapsed": false,
      "items": [
        {
          "xtype": "combo",
          "name": "gutterWidth",
          "fieldLabel": "Base Margin Width",
          "allowBlank": false,
          "store": [
            "15px",
            "20px",
            "25px",
            "30px",
            "35px"
          ],
          "queryMode": "local"
        }
      ]
    },
    {
      "xtype": "panel",
      "title": "Text",
      "collapsed": false,
      "items": [
        {
          "xtype": "combo",
          "name": "font",
          "fieldLabel": "Font",
          "allowBlank": false,
          "store": [
            "Source Sans Pro",
            "Open Sans",
            "Raleway",
            "Lora",
            "Rokkitt"
          ],
          "queryMode": "local"
        },
        {
          "xtype": "combo",
          "name": "fallbackFontFamily",
          "fieldLabel": "Fallback Font Family",
          "allowBlank": false,
          "store": [
            "sans-serif",
            "serif"
          ],
          "queryMode": "local"
        },
        {
          "xtype": "colorfield",
          "name": "textColor",
          "fieldLabel": "Text Color"
        }
      ]
    },
    {
      "xtype": "panel",
      "title": "Paging",
      "defaultType": "textfield",
      "collapsed": false,
      "items": [
        {
          "fieldLabel": "Default Items Per Page",
          "xtype": "combo",
          "name": "defaultPageSize",
          "allowBlank": false,
          "store": [
            15,
            25,
            50
          ],
          "queryMode": "local"
        }
      ]
    },
    {
      "xtype": "panel",
      "title": "Banner",
      "collapsible": false,
      "items": [
        {
          "xtype": "checkbox",
          "name": "bannerImageEnabled",
          "fieldLabel": "Enable Banner Image"
        },
        {
          "xtype": "textfield",
          "name": "bannerImage",
          "fieldLabel": "Banner Image"
        },
        {
          "xtype": "combo",
          "name": "bannerImageRepeat",
          "fieldLabel": "Repeat Banner Image",
          "valueField": "value",
          "displayField": "text",
          "store": [
            ["no-repeat","No"],
            ["repeat-x","Horizontally"],
            ["repeat-y","Vertically"],
            ["repeat","Tile"]
          ]
        }
      ]
    }
  ]
}